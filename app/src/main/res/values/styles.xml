<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--主页面RadioButton的样式-->
    <style name="Main">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@drawable/movie_text_select</item>
    </style>
    <!--movie页面RadioButton的样式-->
    <style name="Movie">
        <item name="android:textColor">@drawable/rb_color_select</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:button">@android:color/transparent</item>
    </style>
    <!--progressbar的样式-->
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="yingku_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/btn_yingku_bg_selector</item>
        <item name="android:layout_height">22dp</item>

    </style>

</resources>
