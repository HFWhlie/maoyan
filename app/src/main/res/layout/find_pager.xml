<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_find"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <LinearLayout
            android:id="@+id/ll_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rl_ht"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/want_bg"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_ht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/v_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_ht"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="话题" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/want_bg"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_zx"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/a0w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_zx"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="资讯" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/want_bg"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_yk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/v02_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_yk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="影库" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/want_bg"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_pf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_pf"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="票房" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>